<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="700" prefWidth="1000" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.LoginController">
   <children>
      <BorderPane prefHeight="700.0" prefWidth="1000.0" AnchorPane.rightAnchor="0.0">
         <center>
            <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <children>
                  <TextField fx:id="tf_username" layoutX="407.0" layoutY="265.0" promptText="Username" />
                  <PasswordField fx:id="tf_password" layoutX="407.0" layoutY="319.0" promptText="Password" />
                  <Label contentDisplay="CENTER" layoutX="448.0" layoutY="136.0" text="Sign In" textAlignment="CENTER">
                     <font>
                        <Font name="System Bold" size="32.0" />
                     </font>
                  </Label>
                  <Button fx:id="btnSignIn" layoutX="468.0" layoutY="386.0" mnemonicParsing="false" onAction="#SignInClicked" text="Sign In" />
                  <Label layoutX="379.0" layoutY="459.0" text="Don't have an account?" />
                  <Hyperlink fx:id="hl_register" layoutX="531.0" layoutY="455.0" onAction="#switchRegister" text="Create an account" />
               </children>
            </AnchorPane>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
