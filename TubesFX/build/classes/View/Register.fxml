<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.RegisterController">
   <children>
      <BorderPane layoutX="10.0" layoutY="10.0" prefHeight="700.0" prefWidth="1000.0">
         <center>
            <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <children>
                  <TextField fx:id="tf_name" layoutX="407.0" layoutY="211.0" promptText="Name" />
                  <TextField fx:id="tf_username" layoutX="407.0" layoutY="264.0" promptText="Username" />
                  <PasswordField fx:id="tf_password" layoutX="407.0" layoutY="319.0" promptText="Password" />
                  <Label contentDisplay="CENTER" layoutX="448.0" layoutY="136.0" text="Sign Up" textAlignment="CENTER">
                     <font>
                        <Font name="System Bold" size="32.0" />
                     </font>
                  </Label>
                  <Button fx:id="btnSignUp" layoutX="468.0" layoutY="386.0" mnemonicParsing="false" onAction="#SignUpClicked" text="Sign Up" />
                  <Label layoutX="387.0" layoutY="460.0" text="Already Have an Account?" />
                  <Hyperlink fx:id="hl_login" layoutX="560.0" layoutY="456.0" onAction="#switchToLogin" text="Sign In" />
               </children>
            </AnchorPane>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
